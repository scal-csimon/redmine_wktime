<%
	@from = session[controller_name].try(:[], :from)
	@to = session[controller_name].try(:[], :to)
	#@profitLossEntries = getTransDetails(@from,@to)
%>
<%= stylesheet_link_tag 'application' , :media => "all" %>
<%= stylesheet_link_tag 'wk-time', :plugin => "redmine_wktime" %>
<style type="text/css">		
		.tbl-report{
			width : 100%;
			table-layout: fixed; !important;
			word-wrap: break-word; !important;
			text-align: center; 
			margin-top:5px; margin-bottom:10px; padding-left: 10px; color:#333333;
			font-family:Verdana, sans-serif; font-size:12px; 
		}
 </style>
<div id="attn-rpt-dlg", style="overflow-x:auto;">
	<table style="width:100%; border-collapse: collapse;">
		 <caption style="text-align:center"><b><%= getMainLocation %><br><%= l(:report_profit_loss) %></b></br>
		 <%= @from.to_formatted_s(:long) + " " + l(:label_date_to) + " " + @to.to_formatted_s(:long)%>
		<thead bgcolor="#e6e6e6">
			<tr style="border-bottom: solid thin;border-top: solid thin;">
				<th align="left" width=50% style="padding-left: 10px;"><%= l(:label_particulars) %></th>
				<th colspan="2" align="right" width=50%><%= @from.to_formatted_s(:long) + " " + l(:label_date_to) + " " + @to.to_formatted_s(:long)%></th>
			</tr>
		</thead>
		<body>
			<% 
				@mainEnriesHash = Hash.new
				@mainTotalHash = Hash.new
				plLedgerTypes = incomeLedgerTypesIGRF + expenseLedgerTypesIGRF
				plLedgerTypes.each do |type|
					@mainEnriesHash[type] = getEachLedgerSumAmtIGRF(@from, @to, type)
					@mainTotalHash[type] = @mainEnriesHash[type].blank? ? 0 : @mainEnriesHash[type].values.inject(:+)
				end
			%>
			<% for i in 0..1 %>
				<% if @mainTotalHash[incomeLedgerTypesIGRF[i]] != 0 %>
					<tr style="width:100%;">
						<td align="left"><b><%= getLedgerTypeHash[incomeLedgerTypesIGRF[i]] %></b></td>
						<td></td>
						<td align="right"><b><%= "%.2f" % @mainTotalHash[incomeLedgerTypesIGRF[i]] if @mainTotalHash[incomeLedgerTypesIGRF[i]] != 0 %></b></td>
					</tr>

					<%= render partial: "rpt_rows", locals: { entries: @mainEnriesHash[incomeLedgerTypesIGRF[i]] }%>
				<% end %>
			<% end %>
			<% for i in 0..2 %>
				<% if @mainTotalHash[expenseLedgerTypesIGRF[i]] != 0 %>
					<tr style="width:100%;">
						<td align="left"><b><%= getLedgerTypeHash[expenseLedgerTypesIGRF[i]] %></b></td>
						<td></td>
						<td align="right"><%=  "%.2f" % @mainTotalHash[expenseLedgerTypesIGRF[i]]  if  @mainTotalHash[expenseLedgerTypesIGRF[i]] != 0 %></td>
						
					</tr>
				
					<%= render partial: "rpt_rows", locals: { entries: @mainEnriesHash[expenseLedgerTypesIGRF[i]]}%>
					
				<% end %>
			<% end %>
			<tr style="width:100%;">
				<td align="left" ><b><%= l(:label_gross) + " " + l(:label_profit) + " : " %></b></td>
				<td style="border-top: solid thin;"></td>
				<td align="right" style="border-top: solid thin;"><b><%= "%.2f" % (@mainTotalHash['Revenus'] + @mainTotalHash['Revenus agricoles'] - @mainTotalHash["Coût des ventes"]  - @mainTotalHash["Frais d'exploitation"]  - @mainTotalHash['Dépenses agricoles']) %></b></td>
			</tr>
			<tr style="width:100%;">
				<td> </td>
				<td> </td>
				<td> </td>
			</tr>
			<% ['Éléments extra/impôts sur le revenu'].each do |type| %>
				<tr style="width:100%;">
					<td align="left"><b><%= getLedgerTypeHash[type] %></b></td>
					<td></td>
					<td align="right"><b><%= "%.2f" % @mainTotalHash[type] if  @mainTotalHash[type] != 0 %></b></td>
				</tr>
				<% if @mainTotalHash[type] != 0 %>
					<%= render partial: "rpt_rows", locals: { entries: @mainEnriesHash[type] }%>
				<% end %>
			<% end %>
			<tr style="width:100%;">
				<td align="left" style="padding-left: 25px;"><b><%= l(:label_net) + " " + l(:label_profit) + " : "%></b></td>
				<td style="border-top: solid thin;border-bottom: solid thin;"></td>
				<td align="right" style="border-top: solid thin;border-bottom: solid thin;"><b><%= "%.2f" % (@mainTotalHash['Revenus'] + @mainTotalHash['Revenus agricoles'] - @mainTotalHash["Coût des ventes"]  - @mainTotalHash["Frais d'exploitation"]  - @mainTotalHash['Dépenses agricoles']- @mainTotalHash["Éléments extra/impôts sur le revenu"]) %></b></td>
			</tr>
		</body>
	</table>
</div>